{
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noEmitOnError": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./dist", 
    "lib": ["ES2016", "ES6", "DOM", "ES2017", "ES7"],
    "esModuleInterop": true,                             
    "resolveJsonModule": true,            
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
